            <TabItem Header="Device Manager">
                <Grid>
                    <c:Control_DeviceManager Margin="10" />
                </Grid>
            </TabItem>
            <TabItem Header="Plugin Management">
                <Grid>
                    <c:Control_PluginManager x:Name="ctrlPluginManager" Margin="10" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
